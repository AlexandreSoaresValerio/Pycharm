n = randint(0,5)
num = int(input('qual numero acha que foi escolhido?'))
print('aguarde um momento')
sleep(2)
if n == num:
    print('parabens, numero escolhido {} '.format(n))
else:
    print('perdeu , numero escolhido foi {} e nao {}'.format(n,num))
