nome = str(input('Qual seu nome completo?'))
print('Seu nome em letras maiuscolas e {}'.format(nome.upper()))
print('Seu nome em letras minusculas e {}'.format(nome.lower()))
print('Seu nome tem {} letras ao total'.format(len(nome.replace(' ', ''))))
print('Seu primeiro nome tem {} Letras'.format(len(nome.split()[0])))
